@page
@model WebAppAutorization.Pages.ResultsPortlandCements.IndexModel

@{
    ViewData["Title"] = "ЦЭХ №3";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>Результаты испытаний портландцемента</h3>

<form method="post">
    <div class="row mb-1">
        <input type="hidden" asp-for="curUser.Id" />
        <div class="col-sm-2">
            <label asp-for="curUser.DateFiltrStart" class="control-label"></label>
            <input asp-for="curUser.DateFiltrStart" class="form-control" />
            <span asp-validation-for="curUser.DateFiltrStart" class="text-danger"></span>
        </div>
        <div class="col-sm-2">
            <label asp-for="curUser.DateFiltrEnd" class="control-label"></label>
            <input asp-for="curUser.DateFiltrEnd" class="form-control" />
            <span asp-validation-for="curUser.DateFiltrEnd" class="text-danger"></span>
        </div>
        <div class="col-sm-1">
            <button type="submit" class="btn btn-outline-primary" asp-page-handler="ChangeGoFiltr" asp-route-Id="@Model.curUser.Id">Применить фильтр</button>
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-outline-primary" asp-page-handler="ConvertToExcelClosedXML" asp-route-Id="@Model.curUser.Id">Конвертировать в Excel</button>
        </div>
    </div>
</form>

<hr />

<div class="row">
    <div class="col-md-14">

        <div class="form-group">
            <a type="submit" class="btn btn-outline-primary" asp-page="Create">Создать новую</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].DateTrial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].Agent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].Sito90)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].CoeffWaterSepar)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].SpecificSurface)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].NormDensityCementPaste)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].BeginCementSet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ResultsPortlandCements[0].EndCementSet)
                    </th>
                    <th>Выполнить</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ResultsPortlandCements) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTrial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Agent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sito90)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoeffWaterSepar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecificSurface)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NormDensityCementPaste)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BeginCementSet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndCementSet)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>
