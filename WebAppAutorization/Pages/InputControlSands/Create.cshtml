@page
@model WebAppAutorization.Pages.InputControlSands.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Создание записи</h1>

<a>Входной контроль песка</a>
<hr />
@if (@Model._foundDubl != null)
{
   <h3>Дубликат ! Будьте ВНИМАТЕЛЬНЫ - запись c такой датой уже есть !</h3>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputControlSand.DateReceipt" class="control-label"></label>
                <input asp-for="InputControlSand.DateReceipt" class="form-control" />
                <span asp-validation-for="InputControlSand.DateReceipt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputControlSand.TotalSandReceived" class="control-label"></label>
                <input asp-for="InputControlSand.TotalSandReceived" class="form-control" />
                <span asp-validation-for="InputControlSand.TotalSandReceived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputControlSand.WaterSand" class="control-label"></label>
                <input asp-for="InputControlSand.WaterSand" class="form-control" />
                <span asp-validation-for="InputControlSand.WaterSand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputControlSand.WetBulkDensity" class="control-label"></label>
                <input asp-for="InputControlSand.WetBulkDensity" class="form-control" />
                <span asp-validation-for="InputControlSand.WetBulkDensity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputControlSand.ClaySubstances" class="control-label"></label>
                <input asp-for="InputControlSand.ClaySubstances" class="form-control" />
                <span asp-validation-for="InputControlSand.ClaySubstances" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputControlSand.SizeModulus" class="control-label"></label>
                <input asp-for="InputControlSand.SizeModulus" class="form-control" />
                <span asp-validation-for="InputControlSand.SizeModulus" class="text-danger"></span>
            </div>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InputControlSand.CreateAt)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InputControlSand.CreateAt)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.InputControlSand.userId)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.InputControlSand.userId)
            </dd>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" /> |
                <a asp-page="./Index">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
