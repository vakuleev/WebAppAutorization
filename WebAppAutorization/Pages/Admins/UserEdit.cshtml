@page
@model WebAppAutorization.Pages.Admins.UserEditModel

@{
    ViewData["Title"] = "UserEdit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Профиль пользователя</h1>

<h5></h5>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <dt class="col-sm-10">Идентификатор Id</dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Id)
            </dd>
            <dt class="col-sm-10">Логин</dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-10">Нормализованный</dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.NormalizedUserName)
            </dd>
            <div class="form-group">
                <label asp-for="User.FamilyName" class="control-label">Фамилия</label>
                <input asp-for="User.FamilyName" class="form-control" />
                <span asp-validation-for="User.FamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label">Имя</label>
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label">Отчество</label>
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label">Email</label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PhoneNumber" class="control-label">Телефон</label>
                <input asp-for="User.PhoneNumber" class="form-control" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="checkbox" name="SoftDelete" value="@Model.User.SoftDelete"
                @(Model.User.SoftDelete ? "checked=\" checked\"" : "" ) />
                <label asp-for="User.SoftDelete" class="control-label">Безопасное удаление документа ЭР, с возможностью восстановления</label>
                <span asp-validation-for="User.SoftDelete" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <br />
                <input type="checkbox" name="ViewDelete" value="@Model.User.ViewDelete"
                @(Model.User.ViewDelete ? "checked=\" checked\"" : "") />
                <label asp-for="User.ViewDelete" class="control-label">Показывать удаленные</label>
                <span asp-validation-for="User.ViewDelete" class="text-danger"></span>
                <br />
                <br />
            </div>
            <div class="form-group">
            <button type="submit" class="btn btn-primary" asp-page-handler="SaveUser" asp-route-id="@Model.User.Id">Сохранить</button> |
            <a asp-page="./Index">Вернуться в список</a>
            </div>
        </form>
    </div>
</div>
<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
