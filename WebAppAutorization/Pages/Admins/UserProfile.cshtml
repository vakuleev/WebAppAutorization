@page
@model WebAppAutorization.Pages.Admins.UserProfileModel

@{
    ViewData["Title"] = "Details_UserProfile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Профиль</h4>

<div>
    <h5>Пользователя</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Идентификатор Id</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">Логин</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">Нормализованный</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.NormalizedUserName)
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User.FamilyName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FamilyName)
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User.FirstName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User.LastName)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.User.Email)</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./UserEdit" asp-route-id="@Model.User?.Id">Редактировать</a> |
    <a asp-page="./Index">Back to List</a>
</div>
