@page
@model WebAppAutorization.Pages.Admins.UserDeleteModel

@{
    ViewData["Title"] = "Create_UserDelete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h5>Удаление пользователя приложения</h5>

<h4>Вы уверенны ?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_deleteUser.Id" class="control-label"></label>
                <input asp-for="_deleteUser.Id" class="form-control" />
                <span asp-validation-for="_deleteUser.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_deleteUser.UserName" class="control-label"></label>
                <input asp-for="_deleteUser.UserName" class="form-control" />
                <span asp-validation-for="_deleteUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_deleteUser.NormalizedUserName" class="control-label"></label>
                <input asp-for="_deleteUser.NormalizedUserName" class="form-control" />
                <span asp-validation-for="_deleteUser.NormalizedUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_deleteUser.Email" class="control-label"></label>
                <input asp-for="_deleteUser.Email" class="form-control" />
                <span asp-validation-for="_deleteUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="checkbox" name="UserChecked" value="@Model._deleteUser.EmailConfirmed"
                @(Model._deleteUser.EmailConfirmed ? "checked=\" checked\"" : "" ) />
                <label asp-for="_deleteUser.EmailConfirmed" class="control-label">Вход разрешен</label>
                <span asp-validation-for="_deleteUser.EmailConfirmed" class="text-danger"></span>
                <br />
                <br />
            </div>
            <div class="form-group">
                <label asp-for="_deleteUser.PhoneNumber" class="control-label"></label>
                <input asp-for="_deleteUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="_deleteUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_deleteUser.ApplicationId" class="control-label"></label>
                <input asp-for="_deleteUser.ApplicationId" class="form-control" />
                <span asp-validation-for="_deleteUser.ApplicationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_deleteUser.ConcurrencyStamp" class="control-label"></label>
                <input asp-for="_deleteUser.ConcurrencyStamp" class="form-control" />
                <span asp-validation-for="_deleteUser.ConcurrencyStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Удаление" class="btn btn-danger" /> |
                <a asp-page="Index">Вернуться в список</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
