@{
    ViewData["Title"] = "Измерительные системы (датчики)";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].prefix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].name_point)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].load_dttm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].id_source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].id_parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].virtual_counter)
