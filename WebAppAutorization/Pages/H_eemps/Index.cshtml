            <th>
                @Html.DisplayNameFor(model => model.H_eemp[0].Delete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.H_eemp) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prefix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name_point)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.load_dttm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_parent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.virtual_counter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delete)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id_eemp">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id_eemp">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id_eemp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
