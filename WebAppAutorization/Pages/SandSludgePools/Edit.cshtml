@page
@model WebAppAutorization.Pages.SandSludgePools.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>Редактирование записи </h3>
<a>Песчаный шлам в шламбассейнах</a>
<hr />
@if (@Model._foundDubl != null)
{
    <h3>Дубликат ! Будьте ВНИМАТЕЛЬНЫ - запись c такой датой время и номер бассейна уже есть !</h3>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="SandSludgePool.CreateAt" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SandSludgePool.Id" />
            <div class="form-group">
                <label asp-for="SandSludgePool.DateTrial" class="control-label"></label>
                <input asp-for="SandSludgePool.DateTrial" class="form-control" />
                <span asp-validation-for="SandSludgePool.DateTrial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SandSludgePool.TimeTrial" class="control-label"></label>
                <input asp-for="SandSludgePool.TimeTrial" class="form-control" />
                <span asp-validation-for="SandSludgePool.TimeTrial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SandSludgePool.NumPool" class="control-label"></label>
                <input asp-for="SandSludgePool.NumPool" class="form-control" />
                <span asp-validation-for="SandSludgePool.NumPool" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SandSludgePool.Density" class="control-label"></label>
                <input asp-for="SandSludgePool.Density" class="form-control" />
                <span asp-validation-for="SandSludgePool.Density" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SandSludgePool.ResidueOnSieve" class="control-label"></label>
                <input asp-for="SandSludgePool.ResidueOnSieve" class="form-control" />
                <span asp-validation-for="SandSludgePool.ResidueOnSieve" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SandSludgePool.GypsumContentSandSlurry" class="control-label"></label>
                <input asp-for="SandSludgePool.GypsumContentSandSlurry" class="form-control" />
                <span asp-validation-for="SandSludgePool.GypsumContentSandSlurry" class="text-danger"></span>
            </div>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SandSludgePool.CreateAt)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SandSludgePool.CreateAt)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SandSludgePool.userId)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SandSludgePool.userId)
            </dd>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" /> |
                <a asp-page="./Index">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
